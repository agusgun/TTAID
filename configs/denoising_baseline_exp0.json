{
    "exp_name": "baseline",
    "model_module": "real_denoiser",
    "model_name": "RealDenoiserBase",
    "mode": "training",

    "data_loader_module": "denoising",
    "data_loader_name": "DIV2KSynthesisDegradationLoader",
    "data_loader_workers": 4,

    "data_mode": "imgs",
    "data_dir": "./data/DIV2K",
    "data_exts": ["*.jpg", "*.png", "*.tif"],
    "crop_size": 256,
    "train_batch_size": 16,
    "val_batch_size": 1,
    "stitch": false,
    "normalization": false,

    "cuda": true,
    "gpu_device": 0,
    "seed": 12345,

    "input_channels": 3,
    "output_channels": 3,

    "mask_base_features": 32,
    
    "restoration_base_features": 32,
    "restoration_scale_features": 16,

    "learning_rate": 0.001,
    "beta1": 0.9,
    "beta2": 0.999,

    "max_epoch": 150,
 
    "validate_every": 1,
    "save_every": 1
}